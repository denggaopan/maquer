{
  "Routes": [
    {
      "UpstreamPathTemplate": "/auth/{url}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "RouteIsCaseSensitive": false,
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "AuthService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "OcelotKey",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamPathTemplate": "/auth/token",
      "UpstreamHttpMethod": [ "Post" ],
      "ReRoutesCaseSensitive": false,
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/token",
      "DownstreamScheme": "http",
      "ServiceName": "AuthService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "Priority": 2,
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 3000,
        "TimeoutValue": 5000
      }
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "UserService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UpstreamPathTemplate": "/user/{url}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "RouteIsCaseSensitive": false
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "OrderService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamPathTemplate": "/order/{url}",
      "UpstreamHttpMethod": [ "Get" ],
      "RouteIsCaseSensitive": false
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/{url}",
      "DownstreamScheme": "http",
      "ServiceName": "CatalogService",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamPathTemplate": "/catalog/{url}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "RouteIsCaseSensitive": false
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "PollConsul",
      "PollingInterval": 5000
    }
  }
}